{% extends "base.twig" %}

{% block content %}
  <!-- Provided by templates/category.twig -->
  {% embed '@layouts/regions/content/content.twig' %}
    {% block content %}
      {% include "@components/page-title/page-title.twig" with
			  {
				  page_title: __('Category Archive: ', 'gesso') ~ archive_title
				}
			%}
      <h4>{{ archive_description }}</h4>
      {% for post in posts %}
        {% include "@components/teaser/teaser.twig" with
          {
            url: post.link,
            title: post.title,
            summary: post.excerpt
          }
        %}
      {% endfor %}
      {% include '@components/pager/pager.twig' %}
    {% endblock %}
  {% endembed %}
{% endblock %}