{% extends "base.twig" %}

{% block content %}
  <!-- Provided by templates/page.twig -->
  {% embed '@layouts/regions/content/content.twig' %}
    {% block content %}
      <p>{{ __('View author: ', 'gesso') }} <a href="{{ user.link }}">{{ user.name }}</a></p>
      {% embed "@components/article/article.twig" %}
        {% block title %}
          {% include "@components/page-title/page-title.twig" with
            {
              page_title: post.title
            }
          %}
        {% endblock %}
        {% block footer %}
          {% include "@components/author/author.twig" with
            {
              url: post.author.link,
              author: post.author.display_name
            }
          %}
        {% endblock %}
        {% block main %}
          {{ post.content }}
        {% endblock %}
        {% block comments %}
          {% include 'components/comments.twig' %}
        {% endblock %}
      {% endembed %}
    {% endblock %}
  {% endembed %}
{% endblock %}
