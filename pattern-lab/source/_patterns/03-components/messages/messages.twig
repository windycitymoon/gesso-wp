<div class="messages {{ modifier_classes }}"{% if type == 'error' %} role="alert" {% else %} role="contentinfo" {% endif %} {% if heading %}aria-label="{{ heading|raw }}"{% endif %}>
  {% if messages|length > 1 %}
    <h2 class="visually-hidden">{{ heading|raw }}</h2>
    <ul class="messages__list">
      {% for message in messages %}
        <li class="messages__item">{{- message|raw -}}</li>
      {% endfor %}
    </ul>
  {% else %}
    <div class="messages__content">
      <h2 class="visually-hidden">{{ heading|raw }}</h2>
      {{- messages|first|raw -}}
    </div>
  {% endif %}
</div>