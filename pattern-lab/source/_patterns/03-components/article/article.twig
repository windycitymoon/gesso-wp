{%
  set classes = [
    'article',
    custom_classes ? custom_classes,
  ]|join(' ')|trim
%}

<article class="{{ classes }}" role="article">
  {% block title %}
    {% include '@components/page-title/page-title.twig' with {
      'page_title': article_page_title
    } %}
  {% endblock %}

  {% if has_footer %}
    <footer>
      {% block footer %}
        {{ footer|raw }}
      {% endblock %}
    </footer>
  {% endif %}

  {% block main %}
    {{ content|raw }}
  {% endblock %}
  {% block comments %}
  {% endblock %}
</article>
